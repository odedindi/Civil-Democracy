{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env", "tsconfig.json"],
	"globalEnv": ["NODE_ENV"],

	"pipeline": {
		"build": {
			"env": [
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"GITHUB_ID",
				"GITHUB_SECRET",
				"NEXTAUTH_SECRET",
				"POSTGRES_URL_NON_POOLING"
			],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true,
			"outputs": ["dist/**", "build/**"]
		},
		"prisma:generate": {
			"cache": false
		},
		"prisma:migrate": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"db:seed": {
			"cache": false
		},
		"deploy": {
			"dependsOn": ["build", "lint"]
		}
	}
}
